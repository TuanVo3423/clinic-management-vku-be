{
    "name": "nodejs-typescript",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "npx nodemon",
        "build": "rimraf ./dist && tsc && tsc-alias && node copy-data.js",
        "start": "node dist/index.js",
        "seed:beds": "ts-node -r tsconfig-paths/register src/utils/seedBeds.ts",
        "seed:admins": "ts-node -r tsconfig-paths/register src/utils/seedAdmins.ts",
        "seed:services": "ts-node -r tsconfig-paths/register src/utils/seedServices.ts",
        "delete:db": "ts-node -r tsconfig-paths/register src/utils/clean_db.ts",
        "blockchain:node": "npx hardhat node",
        "blockchain:compile": "npx hardhat compile",
        "blockchain:deploy": "npx hardhat run blockchain/scripts/deploy.ts --network localhost",
        "blockchain:deploy:testnet": "npx hardhat run blockchain/scripts/deploy.ts --network sepolia",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@langchain/community": "^0.3.17",
        "@langchain/core": "^0.3.19",
        "@langchain/google-genai": "^0.1.5",
        "@types/cors": "^2.8.17",
        "@types/nodemailer": "^6.4.14",
        "body-parser": "^1.20.2",
        "cloudinary": "^1.41.0",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "ethers": "^6.15.0",
        "express": "^4.18.2",
        "express-validator": "^7.0.1",
        "jsonwebtoken": "^9.0.1",
        "langchain": "^0.3.7",
        "mailgen": "^2.0.28",
        "mongodb": "^5.7.0",
        "nodemailer": "^6.9.7",
        "socket.io": "^4.7.2",
        "typescript": "^5.1.6"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^6.1.0",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/lodash": "^4.14.196",
        "@types/node": "^20.4.2",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^5.0.0",
        "hardhat": "^2.27.0",
        "lodash": "^4.17.21",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.1",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.7",
        "tsconfig-paths": "^4.2.0"
    }
