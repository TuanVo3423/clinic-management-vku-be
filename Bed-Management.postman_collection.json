{
  "info": {
    "name": "Hospital Bed Management",
    "_postman_id": "bed-management-collection",
    "description": "API endpoints for hospital bed booking and management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Beds",
      "item": [
        {
          "name": "Get All Beds",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/beds",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "beds"
              ]
            }
          }
        },
        {
          "name": "Get Available Beds",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/beds/available?appointmentDate=2025-10-15&appointmentStartTime=09:00&appointmentEndTime=11:00",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "beds",
                "available"
              ],
              "query": [
                {
                  "key": "appointmentDate",
                  "value": "2025-10-15"
                },
                {
                  "key": "appointmentStartTime",
                  "value": "09:00"
                },
                {
                  "key": "appointmentEndTime",
                  "value": "11:00"
                }
              ]
            }
          }
        },
        {
          "name": "Check Bed Availability",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/beds/check-availability?bedId={{bed_id}}&appointmentDate=2025-10-15&appointmentStartTime=09:00&appointmentEndTime=11:00",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "beds",
                "check-availability"
              ],
              "query": [
                {
                  "key": "bedId",
                  "value": "{{bed_id}}"
                },
                {
                  "key": "appointmentDate",
                  "value": "2025-10-15"
                },
                {
                  "key": "appointmentStartTime",
                  "value": "09:00"
                },
                {
                  "key": "appointmentEndTime",
                  "value": "11:00"
                }
              ]
            }
          }
        },
        {
          "name": "Get Bed by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/beds/{{bed_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "beds",
                "{{bed_id}}"
              ]
            }
          }
        },
        {
          "name": "Get Bed Appointments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/beds/{{bed_id}}/appointments",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "beds",
                "{{bed_id}}",
                "appointments"
              ]
            }
          }
        },
        {
          "name": "Create Bed",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bedNumber\": 11,\n  \"bedName\": \"Bed 11 - VIP Room\",\n  \"department\": \"VIP\",\n  \"description\": \"Private VIP room bed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/beds",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "beds"
              ]
            }
          }
        },
        {
          "name": "Update Bed",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isAvailable\": false,\n  \"description\": \"Under maintenance\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/beds/{{bed_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "beds",
                "{{bed_id}}"
              ]
            }
          }
        },
        {
          "name": "Delete Bed",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/beds/{{bed_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "beds",
                "{{bed_id}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Appointments with Beds",
      "item": [
        {
          "name": "Create Appointment with Bed",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientId\": \"{{patient_id}}\",\n  \"doctorId\": \"{{doctor_id}}\",\n  \"serviceId\": \"{{service_id}}\",\n  \"bedId\": \"{{bed_id}}\",\n  \"appointmentDate\": \"2025-10-15\",\n  \"appointmentStartTime\": \"09:00\",\n  \"appointmentEndTime\": \"11:00\",\n  \"isEmergency\": false,\n  \"note\": \"Patient requires bed rest\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "appointments"
              ]
            }
          }
        },
        {
          "name": "Get Appointment (with Bed Info)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/appointments/{{appointment_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "appointments",
                "{{appointment_id}}"
              ]
            }
          }
        },
        {
          "name": "Get All Appointments (with Bed Info)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "appointments"
              ]
            }
          }
        }
      ]
    }
  ],
